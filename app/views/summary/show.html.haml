%h1
  = "#{params[:year]}年 #{params[:month]}月"

= render partial: 'summary/move_month_form'

%h2
  総支出
%p
  ￥
  = @payments.sum(:money)

%h2
  残額
%p
  ￥
  = @incomes.sum(:money) - @payments.sum(:money)

%h2
  クレジットカード
%p
  ￥
  = @payments.where(card: true).sum(:money)
%h2
  カテゴリーごと

%table.table.table-condensed
  %tr
    %th カテゴリー
    %th 支払
    %th 予算差引額
  - @month_records.pluck(:category_id).uniq.each do |category_id|
    %tr
      %th
        = @categories.find_by_id(category_id).name
      %td
        ￥
        = @month_records.where(category_id: category_id).sum(:money)
      %td
        ￥
        = @categories.find_by_id(category_id).budget - @month_records.where(category_id: category_id).sum(:money)
