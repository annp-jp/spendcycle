= form_for @salary_date do |f|
  - if @salary_date.errors.any?
    #error_explanation
      %h2= "#{pluralize(@salary_date.errors.count, "error")} prohibited this salary_date from being saved:"
      %ul
        - @salary_date.errors.full_messages.each do |msg|
          %li= msg

  .field.space-bottom-half
    締め日
    = select_tag 'salary_date[cutoff]', options_for_select(cutoff_list()), selected: @salary_date.cutoff.to_i

  .field.space-bottom-half
    = f.hidden_field :user_id, value: current_user.id
  .actions
    = f.submit 'Save'
