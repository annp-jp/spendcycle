%h1 Listing records

%table
  %thead
    %tr
      %th Payment
      %th Date
      %th Category
      %th Card
      %th Memo
      %th
      %th
      %th

  %tbody
    - @records.each do |record|
      %tr
        %td= record.payment
        %td= record.date
        %td= record.category.name
        %td= record.card
        %td= record.memo
        %td= link_to 'Show', record
        %td= link_to 'Edit', edit_record_path(record)
        %td= link_to 'Destroy', record, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Record', new_record_path
