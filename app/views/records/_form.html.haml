= form_for @record do |f|
  - if @record.errors.any?
    #error_explanation
      %h2= "#{pluralize(@record.errors.count, "error")} prohibited this record from being saved:"
      %ul
        - @record.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :payment
    = f.number_field :payment
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :card
    = f.check_box :card
  .field
    = f.label :memo
    = f.text_area :memo
  .actions
    = f.submit 'Save'
