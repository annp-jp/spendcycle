source 'https://rubygems.org'

gem 'rails', '4.2.5'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'knockoutjs-rails'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc
gem 'activerecord-import'
gem 'devise'
gem 'haml-rails'
gem 'erb2haml'
gem 'bootstrap-sass'
gem 'autoprefixer-rails'
gem 'momentjs-rails'
gem 'bootstrap3-datetimepicker-rails'
gem 'annotate'
gem 'kaminari'
